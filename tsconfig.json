{
  "compilerOptions": {
    "baseUrl": ".",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "incremental": true,
    "lib": ["es2020"],
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "noUnusedParameters": false,
    "outDir": "./dist",
    "paths": {
      "@src/*": ["src/*"],
      "@specs/*": ["E2E/specs/*"]
    },
    "removeComments": true,
    "sourceMap": true,
    "target": "es2020"
  },
  "include": ["src/**/*"]
}
